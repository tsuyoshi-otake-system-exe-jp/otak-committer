{
  "name": "otak-committer",
  "displayName": "otak-committer",
  "description": "VS Code extension for intelligent SCM operations - Multilingual commit message generation with AI support (9 languages supported) and future PR management features.",
  "publisher": "tsuyoshi-otake-system-exe-jp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-committer"
  },
  "bugs": {
    "url": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-committer/issues"
  },
  "homepage": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-committer#readme",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "OTAK Committer",
      "properties": {
        "otakCommitter.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for generating commit messages"
        },
        "otakCommitter.language": {
          "type": "string",
          "default": "japanese",
          "enum": [
            "english",
            "french",
            "german",
            "italian",
            "japanese",
            "chinese",
            "korean",
            "vietnamese",
            "russian"
          ],
          "enumDescriptions": [
            "English",
            "Français",
            "Deutsch",
            "Italiano",
            "日本語",
            "中文",
            "한국어",
            "Tiếng Việt",
            "Русский"
          ],
          "description": "Language for commit messages"
        },
        "otakCommitter.messageStyle": {
          "type": "string",
          "default": "normal",
          "enum": [
            "simple",
            "normal",
            "detailed"
          ],
          "enumDescriptions": [
            "Simple and concise (100 tokens)",
            "Normal length with some context (200 tokens)",
            "Detailed explanation (500 tokens)"
          ],
          "description": "Style and length of generated commit messages"
        }
      }
    },
    "commands": [
      {
        "command": "otak-committer.generateMessage",
        "title": "Generate Commit Message",
        "category": "OTAK Committer",
        "icon": "$(symbol-constant)"
      },
      {
        "command": "otak-committer.openSettings",
        "title": "Open OTAK Committer Settings",
        "category": "OTAK Committer"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "otak-committer.generateMessage",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "esbuild": "^0.20.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "dependencies": {
    "axios": "^1.6.7"
  }
}
